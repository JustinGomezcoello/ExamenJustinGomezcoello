<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenJustinGomezcoello.Views.Historial"
             Title="Justin Gomezcoello"
             BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="ðŸ“œ Historial Peliculas obtenidos de SQLite "
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <Border BackgroundColor="#1E1E1E"
                    StrokeThickness="2"
                    Stroke="#007BFF"
                    Padding="10"
                    Margin="0,5,0,5">
                <ListView x:Name="jgomezcoello_listaPeliculas"
                          ItemsSource="{Binding Peliculas}"
                          BackgroundColor="#1E1E1E"
                          SeparatorColor="#007BFF"
                          HeightRequest="500">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Border BackgroundColor="#252525"
                                        StrokeThickness="1"
                                        Stroke="Gray"
                                        Margin="5">
                                    <Label Text="{Binding Detalles}"
                                           FontSize="16"
                                           TextColor="White"
                                           LineBreakMode="WordWrap"/>
                                </Border>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
