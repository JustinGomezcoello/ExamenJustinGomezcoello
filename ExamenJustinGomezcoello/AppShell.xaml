<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:ExamenJustinGomezcoello.Views"
       x:Class="ExamenJustinGomezcoello.AppShell"
       Shell.BackgroundColor="#121212"
       Shell.ForegroundColor="White"
       Shell.TitleColor="White"
       Shell.DisabledColor="Gray"
       Shell.UnselectedColor="#6C757D"
       Shell.TabBarBackgroundColor="#1E1E1E"
       Shell.TabBarTitleColor="White"
       Shell.TabBarUnselectedColor="Gray">

    <TabBar>
        <Tab Title="🔍 Buscar">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>

        <Tab Title="📜 Historial">
            <ShellContent ContentTemplate="{DataTemplate views:Historial}" />
        </Tab>
    </TabBar>
</Shell>




